{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx", // or "react" if using classic runtime
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "jest.config.js" // Include Jest config if it's JS for TS checking
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out"
  ]
}
